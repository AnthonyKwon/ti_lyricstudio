<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:ti_Lyricstudio.ViewModels.Editor"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:conv="clr-namespace:ti_Lyricstudio.Converters;assembly=ti_Lyricstudio"
			 xmlns:editor="using:ti_Lyricstudio.Views.Controls.Editor"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 DataContextChanged="Editor_DataContextChanged"
             x:Class="ti_Lyricstudio.Views.Controls.Editor.Editor">

	<UserControl.Resources>
		<!-- Definition of resource converters -->
		<conv:LyricColorConverter x:Key="LyricColorConverter"/>
		<conv:LyricOpacityConverter x:Key="LyricOpacityConverter"/>
	</UserControl.Resources>

	<ScrollViewer x:Name="EditorScroll" VerticalScrollBarVisibility="Auto" SizeChanged="Editor_SizeChanged"
					Offset="{ReflectionBinding ScrollPos}">
		<ScrollViewer.Transitions>
			<Transitions>
				<VectorTransition Property="Offset" Duration="0:0:0.2" Easing="CubicEaseOut"/>
			</Transitions>
		</ScrollViewer.Transitions>
		<ItemsRepeater x:Name="EditorView" ItemsSource="{ReflectionBinding FlattenedLyrics}">
			<ItemsRepeater.Layout>
				<StackLayout Spacing="0"/>
			</ItemsRepeater.Layout>
			<ItemsRepeater.ItemTemplate>
				<DataTemplate>
					<StackPanel x:Name="EditorTextBlock" Orientation="Horizontal" HorizontalAlignment="Center"
								Height="{ReflectionBinding $parent[ScrollViewer].DataContext.LineHeight}">
						<TextBlock x:Name="Timestamp" DockPanel.Dock="Left"
								Width="{ReflectionBinding $parent[ScrollViewer].DataContext.TimestampWidth}"
								FontSize="12"
								HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.25"
								Text="{ReflectionBinding Time}"/>
						<TextBlock x:Name="Text" FontWeight="Bold" FontSize="26"
								MaxWidth="{ReflectionBinding $parent[ScrollViewer].DataContext.MaxLineWidth}"
								Opacity="{ReflectionBinding Active,
								Converter={StaticResource LyricOpacityConverter}}"
								VerticalAlignment="Center" TextAlignment="Center"
								TextTrimming="CharacterEllipsis"
								Text="{ReflectionBinding Text}">
							<TextBlock.Transitions>
								<Transitions>
									<DoubleTransition Property="Opacity" Duration="0:0:0.2"/>
								</Transitions>
							</TextBlock.Transitions>
						</TextBlock>
					</StackPanel>
				</DataTemplate>
			</ItemsRepeater.ItemTemplate>
		</ItemsRepeater>
	</ScrollViewer>
</UserControl>
